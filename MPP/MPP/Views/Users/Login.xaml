<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPP.Views.Users.Login">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="10" VerticalOptions="Center">
                
                <Entry x:Name="txtUserName" Placeholder="Username" FontSize="Medium"/>
                <Entry x:Name="txtPassword" Placeholder="password" IsPassword="True"/>
                <Button x:Name="btnLogin" Text="Login"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

    <!--Navigation.PushAsync(new AddCategory());-->
</ContentPage>